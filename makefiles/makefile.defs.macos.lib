# File: makefile.defs.macos.lib
# modified from makefile.defs.linux.silent.lib

# System: Mac OS X
# Greg Hedlund, 20 Aug 2015

CC = clang -std=gnu99

CXX = clang++ -std=c++11

CFLAGS = -DuseCarbon=0 -Dmacintosh -DPRAAT_LIB -fvisibility=default -D_FILE_OFFSET_BITS=64 -Wundef -fPIC -mmacosx-version-min=10.7 -O1 -g1 -Wno-return-type-c-linkage

CXXFLAGS = $(CFLAGS) -ObjC++ -arch x86_64 -fmessage-length=80 -stdlib=libc++ -Wshadow 

LINK = clang++

EXECUTABLE = praat
LIBRARY = libpraat.dylib

LIBS = -arch x86_64 -mmacosx-version-min=10.7 -stdlib=libc++ -fobjc-link-runtime -framework Cocoa -framework AudioToolbox -framework AudioUnit -framework CoreAudio

AR = ar
RANLIB = ranlib
ICON =
MAIN_ICON =
